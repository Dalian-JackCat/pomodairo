<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx"
	x="10" y="5" width="298" height="154" 
	backgroundColor="#313131"
	creationComplete="init()">


	<fx:Script>
        <![CDATA[
			import flash.desktop.NativeApplication;
			import flash.net.URLRequest;

			private const DONATE_URL:String = "https://www.paypal.com/cgi-bin/webscr?cmd=_donations&business=TK4ED2PWBY2NW&lc=SE&item_name=Pomodairo&currency_code=EUR&bn=PP%2dDonationsBF%3abtn_donateCC_LG%2egif%3aNonHosted";
			
			[Bindable]
			private var version:String;
			
        	private function init():void
        	{
				getVersion();
        	}
        	
			private function openPaypal():void
			{
				navigateToURL(new URLRequest(DONATE_URL), "_self");
			}
			
			private function openGoogleCode():void
			{
				navigateToURL(new URLRequest("http://code.google.com/p/pomodairo/"), "_self");
			}
        	
			private function getVersion():void {
				var descriptor:XML = NativeApplication.nativeApplication.applicationDescriptor;
				var ns:Namespace = descriptor.namespaceDeclarations()[0];
				version = descriptor.ns::version;
			}
			
            private function exit():void
            {
            	this.parent.removeChild(this);
            }

			            
        ]]>
    </fx:Script>
	
	<s:Button x="221" y="121" label="Close" click="exit()"/>
	<s:Image x="151" y="51" source="assets/paypal.gif" click="openPaypal()" buttonMode="true" useHandCursor="true"/>
	<s:Label x="10" y="36" text="Pomodairo is freeware and will remain free. However if you find Pomodairo useful then consider making a donation. Thank you!" height="108" width="133"/>
	<s:Label x="99" y="10" text="version {version}"/>
	<s:Label x="10" y="10" text="POMODAIRO" fontWeight="bold"/>
	<s:Label x="10" y="129" text="http://code.google.com/p/pomodairo/" fontSize="8" fontWeight="normal" fontStyle="italic" buttonMode="true" useHandCursor="true" mouseChildren="false" click="openGoogleCode()"/>
	
</s:BorderContainer>
